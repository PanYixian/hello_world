#write to files

void test01(){
    
    ofstream ofs;
    ofs.open("test.txt", ios::out);
    
    ofs << "Name: Ana" << endl;
    ofs << "Age: 20" << endl;
    ofs << "Gender: female" << endl;
    
    ofs.close();
}


int main() {
    
    test01();
    
    return 0;
}


