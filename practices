#include <iostream>
using namespace std;
// the first programm
/*  */

void len_hailstone(int n){
    
    cout << n << " ";
    int length = 1;
    while (n > 1) {
        (n % 2) ? n = 3 * n + 1 : n /= 2;
        cout << n << " ";
        length++;
    }
}

int main() {
    
    //hailstone
    
    for (int i = 1; i < 11; i++) {
        len_hailstone(i);
        cout << endl;
    }
    
    return 0;
}
